{
  "name": "mactype",
  "version": "1.0.0",
  "description": "TypeScript framework for managing Homebrew packages and macOS settings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mactype": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "install:global": "npm run build && npm link"
  },
  "keywords": [
    "macos",
    "homebrew",
    "configuration",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ts-node": "^10.9.2"
  }
}
